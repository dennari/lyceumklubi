---
layout: layout-outermost.hbs
---
<div class="main-logo-container" id="mobile-logo">

	<a href="./">
	  <img class="brand" src="/{{rev "assets/logo.png"}}"/>
	</a>


	<a href="./" class="logo">
	  <span class="line1">{{#tr "helsinkis"}}{{capitalizeFirst translated}}{{/tr}}</span><br/>
	  <span class="line2">{{#tr "lyceumclub"}}{{capitalizeFirst translated}}{{/tr}}</span>
	</a>  

</div>


<article>
{{#is language "fi"}}
	<div 
		class="hero-unit" 
		style="background-image: url('/{{rev "assets/helsinki-header-photo-1.jpg"}}');">
	</div>
{{else}}
	<div 
		class="hero-unit" 
		style="background-image: url('/{{rev "assets/helsinki-header-photo-2.jpg"}}'); background-position: 50% 40%;">
	</div>
{{/is}}
</article>
 


<article>                      
	<h1 id="club">{{#tr "club"}}{{capitalizeFirst translated}}{{/tr}}</h1>
	{{#compose src="about.md"}}
		{{#markdown }}	
{{{@content}}} 
		{{/markdown}}
	{{/compose}}
	{{#compose src="clubspace.hbs"}}
{{{@content}}}
	{{/compose}}
</article>
<article>                      
	<h1 id="activities">{{#tr "activities"}}{{capitalizeFirst translated}}{{/tr}}</h1>
	{{#compose src="activities.md"}}
		{{#markdown }}
{{{@content}}} 
		{{/markdown}}
	{{/compose}}
</article>
<article>                      
	<h1 id="contact">{{#tr "contact"}}{{capitalizeFirst translated}}{{/tr}}</h1>
	{{#compose src="contact.md"}}
		{{#markdown }}
{{{@content}}} 
		{{/markdown}}
	{{/compose}}
</article>

{{!-- {{#compose '*'}}
	<article>                      
	 <h1 id="{{key}}">{{#tr key}}{{capitalizeFirst translated}}{{/tr}}</h1>
